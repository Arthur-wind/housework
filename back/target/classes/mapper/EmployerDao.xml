<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.EmployerDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.EmployerEntity" id="employerMap">
        <result property="employer_account" column="employer_account"/>
        <result property="password" column="password"/>
        <result property="employer_name" column="employer_name"/>
        <result property="age" column="age"/>
        <result property="gender" column="gender"/>
        <result property="phone" column="phone"/>
        <result property="photo" column="photo"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.EmployerVO" >
		SELECT * FROM employer  employer
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.EmployerVO" >
		SELECT  employer.* FROM employer  employer
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.EmployerView" >

		SELECT  employer.* FROM employer  employer
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.EmployerView" >
		SELECT * FROM employer  employer <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

</mapper>
