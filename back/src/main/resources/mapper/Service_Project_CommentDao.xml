<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.Service_Project_CommentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.Service_Project_CommentEntity" id="service_project_commentMap">
        <result property="refid" column="refid"/>
        <result property="userid" column="userid"/>
        <result property="nickname" column="nickname"/>
        <result property="content" column="content"/>
        <result property="reply" column="reply"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.Service_Project_CommentVO" >
		SELECT * FROM service_project_comment  service_project_comment
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.Service_Project_CommentVO" >
		SELECT  service_project_comment.* FROM service_project_comment  service_project_comment
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.Service_Project_CommentView" >

		SELECT  service_project_comment.* FROM service_project_comment  service_project_comment
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.Service_Project_CommentView" >
		SELECT * FROM service_project_comment  service_project_comment <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

</mapper>
