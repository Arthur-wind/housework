<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.Application_AppointmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.Application_AppointmentEntity" id="application_appointmentMap">
        <result property="appointmentNo" column="appointment_no"/>
        <result property="projectName" column="project_name"/>
        <result property="salary" column="salary"/>
        <result property="applicationTime" column="application_time"/>
        <result property="applicationNotes" column="application_notes"/>
        <result property="employerAccount" column="employer_account"/>
        <result property="employerName" column="employer_name"/>
        <result property="phone" column="phone"/>
        <result property="employeeAccount" column="employee_account"/>
        <result property="employeeName" column="employee_name"/>
        <result property="contactPhone" column="contact_phone"/>
        <result property="is_reviewed" column="is_reviewed"/>
        <result property="reviewComment" column="review_comment"/>
        <result property="payment_status" column="payment_status"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.Application_AppointmentVO" >
		SELECT * FROM application_appointment  application_appointment
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.Application_AppointmentVO" >
		SELECT  application_appointment.* FROM application_appointment  application_appointment
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.Application_AppointmentView" >

		SELECT  application_appointment.* FROM application_appointment  application_appointment
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.Application_AppointmentView" >
		SELECT * FROM application_appointment  application_appointment <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM application_appointment
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM application_appointment
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM application_appointment
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM application_appointment
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM application_appointment
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
