<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.Requirement_InfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.Requirement_InfoEntity" id="requirement_infoMap">
        <result property="title" column="title"/>
        <result property="projectType" column="project_type"/>
        <result property="salary" column="salary"/>
        <result property="workingHours" column="working_hours"/>
        <result property="workLocation" column="work_location"/>
        <result property="requirements" column="requirements"/>
        <result property="detailedDescription" column="detailed_description"/>
        <result property="publishTime" column="publish_time"/>
        <result property="coverImage" column="cover_image"/>
        <result property="employerAccount" column="employer_account"/>
        <result property="employerName" column="employer_name"/>
        <result property="phone" column="phone"/>
        <result property="last_clickTime" column="last_click_time"/>
        <result property="clickCount" column="click_count"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.Requirement_InfoVO" >
		SELECT * FROM requirement_info  requirement_info
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.Requirement_InfoVO" >
		SELECT  requirement_info.* FROM requirement_info  requirement_info
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.Requirement_InfoView" >

		SELECT  requirement_info.* FROM requirement_info  requirement_info
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.Requirement_InfoView" >
		SELECT * FROM requirement_info  requirement_info <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

</mapper>
